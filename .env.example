# Audio Book Translator 环境配置文件

# 基本配置
DEBUG=false
PROJECT_NAME="Audio Book Translator"
VERSION="1.0.0"

# 数据库配置
DATABASE_URL="sqlite:///./audiobook.db"

# AI 翻译配置 - 至少配置其中一个
# OpenAI配置
OPENAI_API_KEY=your_openai_api_key_here
# Claude配置 (可选)
CLAUDE_API_KEY=your_claude_api_key_here
TRANSLATION_MODEL=gpt-3.5-turbo

# Azure TTS 配置 - 必须配置
AZURE_TTS_KEY=your_azure_tts_key_here
AZURE_TTS_REGION=your_azure_tts_region_here
TTS_VOICE=zh-CN-XiaoxiaoNeural

# 文件存储配置
UPLOAD_DIR=./storage/uploads
TRANSLATION_DIR=./storage/translations
AUDIO_DIR=./storage/audio
MAX_FILE_SIZE=52428800  # 50MB

# 并发配置
MAX_WORKERS=4
CHUNK_SIZE=1000

# API 配置
API_V1_STR=/api/v1

# Development
DEBUG=false